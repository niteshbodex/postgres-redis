<center>
  <h1>Add User</h1>
  {{#if error}} <span>{{error}}</span>{{/if}}
  <form method="POST" action="/user/add">
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">ID</label>
      <div class="col-sm-10">
        <input
          type="text"
          required
          name="id"
          class="form-control"
          placeholder="Add ID"
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">First Name</label>
      <div class="col-sm-10">
        <input
          type="text"
          required
          name="first_name"
          class="form-control"
          placeholder="First Name"
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Last Name</label>
      <div class="col-sm-10">
        <input
          type="text"
          required
          name="last_name"
          class="form-control"
          placeholder="Last Name"
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input
          type="text"
          required
          name="email"
          class="form-control"
          placeholder="Email Address"
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Phone</label>
      <div class="col-sm-10">
        <input
          type="text"
          required
          name="phone"
          class="form-control"
          placeholder="Phone Number"
        />
      </div>
    </div>
    <div>
      <input type="submit" class="btn btn-primary col-4" value="Save" />
    </div>
  </form>
</center>