<center>
  <h1>Search Users</h1>
  {{#if error}} <span>{{error}}</span>{{/if}}
  <form class="form-inline" method="POST" action="/user/search">
    <div class="form-group col-4">
      <input
        type="text"
        name="id"
        class="form-control"
        placeholder="Search Users By ID"
      />
    </div>
    <br />
    <input type="submit" class="btn btn-primary col-2" value="Search" />
  </form>
</center>